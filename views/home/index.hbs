<div class="entry">
	<h1>{{title}}</h1>
	<div class="body">
		<div class="span9">
			<div class="well well-small">
				<!-- Bắt đầu sản phẩm mới-->
				<h4>SẢN PHẨM MỚI
					<small class="pull-right">12 sảm phẩm mới nhất</small>
				</h4>
				<div class="row-fluid">
					<div id="featured" class="carousel slide">
						<div class="carousel-inner">
							<div class="item active">
								<ul class="thumbnails">
									{{#each itemsMoi1}}
									<li class="span3">
										<div class="thumbnail" style="height:310px">
											<i class="tag"></i>
											<a href="../product/detail/{{ma_may_anh}}">
												<img src="/imgs/{{duong_dan}}" alt="">
											</a>
											<div class="caption">
												<h5 style="height: 60px">{{ten_may_anh}} </h5>
												<h4>
													<a class="btn"  href="../product/detail/{{ma_may_anh}}">VIEW</a>
													<span class="pull-right" style="color: red">{{number_format gia}} đ</span>
												</h4>
											</div>
										</div>
									</li>
									{{/each}}
								</ul>
							</div>
							<div class="item">
								<ul class="thumbnails">
									{{#each itemsMoi2}}
									<li class="span3">
										<div class="thumbnail" style="height:310px">
											<i class="tag"></i>
											<a href="../product/detail/{{ma_may_anh}}">
												<img src="/imgs/{{duong_dan}}" alt="">
											</a>
											<div class="caption">
												<h5 style="height: 60px">{{ten_may_anh}} </h5>
												<h4>
													<a class="btn" href="../product/detail/{{ma_may_anh}}">VIEW</a>
													<span class="pull-right" style="color: red">{{number_format gia}} đ</span>
												</h4>
											</div>
										</div>
									</li>
									{{/each}}
								</ul>
							</div>
							<div class="item">
								<ul class="thumbnails">
									{{#each itemsMoi3}}
									<li class="span3">
										<div class="thumbnail" style="height:310px">
											<i class="tag"></i>
											<a href="../product/detail/{{ma_may_anh}}">
												<img src="/imgs/{{duong_dan}}" alt="">
											</a>
											<div class="caption">
												<h5 style="height: 60px">{{ten_may_anh}} </h5>
												<h4>
													<a class="btn" href="../product/detail/{{ma_may_anh}}">VIEW</a>
													<span class="pull-right" style="color: red">{{number_format gia}} đ</span>
												</h4>
											</div>
										</div>
									</li>
									{{/each}}
								</ul>
							</div>
						</div>
						<a class="left carousel-control" href="#featured" data-slide="prev">‹</a>
						<a class="right carousel-control" href="#featured" data-slide="next">›</a>
					</div>
				</div>
			</div>
			<!-- Kết Thúc sản phẩm mới-->
			<h4>SẢN PHẨM BÁN CHẠY NHẤT </h4>
			
			<ul class="thumbnails">
				{{#each itemsBanChay}}
				<li class="span3">
					<div class="thumbnail" style="height:360px">
						<a href="../product/detail/{{ma_may_anh}}">
							<img src="/imgs/{{duong_dan}}" alt="" />
						</a>
						<div class="caption">
							<h5>{{ten_may_anh}}</h5>
							<h4 style="text-align:center">
								<a class="btn" href="../product/detail/{{ma_may_anh}}">
									<i class="icon-zoom-in"></i>
								</a>
								<a class="btn btn-link" style="height: 30px;width: 70px">
									<form class="form-horizontal" id="frmAddItem" method="post" action="/cart/add">
													<input name="proId" type="hidden" value="{{ma_may_anh}}">
													<input id="txtQ" name="quantity" type="hidden" class="form-control" placeholder="Slg" value="1">
													<span class="input-group-btn">
														<button class="btn btn-primary" type="submit">
															<span class="glyphicons glyphicons-cart-in" aria-hidden="true">Add to</span>
														</button>
													</span>
									</form>
								</a>
								</br>
								<a class="btn btn-primary" href="#">{{number_format gia}} đ</a>
							</h4>
						</div>
					</div>
				</li>
				{{/each}}
			</ul>

			<!--Sản phẩm được xem nhiều nhất-->
			<h4>SẢN PHẨM ĐƯỢC XEM NHIỀU NHẤT </h4>
			<ul class="thumbnails">
				{{#each itemsXemNhieu}}
				<li class="span3">
					<div class="thumbnail" style="height:360px">
						<a href="../product/detail/{{ma_may_anh}}">
							<img src="/imgs/{{duong_dan}}" alt="" />
						</a>
						<div class="caption">
							<h5>{{ten_may_anh}}</h5>
							<h4 style="text-align:center">
								<a class="btn" href="../product/detail/{{ma_may_anh}}">
									<i class="icon-zoom-in"></i>
								</a>
								<a class="btn btn-link" style="height: 30px;width: 70px">
									<form class="form-horizontal" id="frmAddItem" method="post" action="/cart/add">
													<input name="proId" type="hidden" value="{{ma_may_anh}}">
													<input id="txtQ" name="quantity" type="hidden" class="form-control" placeholder="Slg" value="1">
													<span class="input-group-btn">
														<button class="btn btn-primary" type="submit">
															<span class="glyphicons glyphicons-cart-in" aria-hidden="true">Add to</span>
														</button>
													</span>
									</form>
								</a>					
								</br>
								<a class="btn btn-primary" href="#">{{number_format gia}} đ</a>
							</h4>
						</div>
					</div>
				</li>
				{{/each}}
			</ul>
			<!--Hết sản phẩm được xem nhiều nhất-->

		</div>
	</div>
</div>