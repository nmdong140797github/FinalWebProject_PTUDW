{{#section 'title'}} Đăng nhập {{/section}} {{#section 'css'}}
<style type="text/css">
    label {
        font-weight: normal !important;
    }
    .form-horizontal .control-label { padding-right: 20px}
</style>
{{/section}} {{#section 'js'}}
<script type="text/javascript">
    // Kiểm tra email có @ hay không
    $(document).ready(function () {
        $("btnLogin").click(function () {
            if($('#txtEmail').html().includes("@")==false)
            {
                $("#email_error").html("Email phải chứa @");
            }
        });
    });

</script> {{/section}}


    <form class="form-horizontal" method="post" action="" id="frmLogin">
        <div class="form-group" >
            <label for="txtEmail" class="col-sm-2 control-label">Email đăng nhập</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="txtEmail" placeholder="Email đăng nhập" name="email"> 
                {{#if showError}}
                <strong style="color:red">Email đã tồn tại!</strong>
                {{/if}}
                <span class="error"><p id="email_error"></p></span>
            </div>
        </div>
        <div class="form-group">
            <label for="txtPWD" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-4">
                <input type="password" class="form-control" id="txtPWD" placeholder="Password" name="rawPWD">
                <span class="error"><p id="password_error"></p></span>
            </div>
        </div>
        <div class="form-group">
            <div class=" col-sm-2">
                <label>
                    <input type="checkbox" name="remember"> Ghi nhớ
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-5 ">
                <button id='btnLogin' type="submit" class="btn btn-success">
                    Đăng nhập
                </button>
            </div>
        </div>
    </form>


