{{#section 'title'}}
	Product Edit
{{/section}}

{{#if showAlert}}
    <div class="alert alert-success">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	Bạn đã sửa đổi máy ảnh thành công
</div>
{{/if}}

{{#with product}}
<form action="" method="POST" role="form">    
    <div class="control-group">
        <label class="control-label" for="inputId">ID <sup>*</sup></label>
        <div class="controls">
            <input id="inputId" name="ProductId" type="text" value='{{ma_may_anh}}' readonly="true">
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputName">Name <sup>*</sup></label>
        <div class="controls">
            <input id="inputName" name="ProductName" type="string" value='{{ten_may_anh}}'>
        </div>
    </div>
    
    <div class="control-group">
        <label class="control-label" for="inputPrice">Price <sup>*</sup></label>
        <div class="controls">
            <input id="inputPrice" name="ProductPrice" type="string" value='{{gia}}'>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputLink">Link <sup>*</sup></label>
        <div class="controls">
            <input id="inputLink" name="ProductLink" type="string" value=''>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputCat">Categorize <sup>*</sup></label>
        <div class="controls">
            <select name="ProductCategory">
                {{#each category}}
                    <option value="{{ma_loai}}">{{ten_loai}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputSupplier">Supplier <sup>*</sup></label>
        <div class="controls">
            <select name="ProductSupplier">
                {{#each supplier}}
                    <option value="{{ma_ncc}}">{{ten_ncc}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputProducer">Producer <sup>*</sup></label>
        <div class="controls">
            <select name="ProductProducer">
                {{#each producer}}
                    <option value="{{ma_nsx}}">{{ten_nsx}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputNumber">Number <sup>*</sup></label>
        <div class="controls">
            <input id="inputNumber" name="ProductNumber" type="string" value='{{so_luong}}'>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">Import Date <sup>*</sup></label>
        <div class="controls">
            <input id="inputImportDate" name="ProductDate" type="date" value={{ngay_nhap}}> 
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputDescribe">Describe <sup>*</sup></label>
        <div class="controls">
            <input id="inputDescribe" name="ProductDescribe" type="text" value={{mo_ta}}>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="inputOrigin">Origin <sup>*</sup></label>
        <div class="controls">
            <input id="inputOrigin" name="ProductOrigin" type="text" value='{{xuat_xu}}'>
        </div>
    </div>

</form>

{{/with }}