                        <a href="#delete" role="button" data-toggle="modal">
                            <i class="icon-remove-sign"></i>
                        </a>
                        
                        <div id="delete1" class="modal hide fade in" tabindex="-1" role="dialog" aria-labelledby="login" aria-hidden="false">
