{{#if layoutVM.isAdmin}}
{{#section 'title'}}
	Edit Producer
{{/section}}

{{#if showAlert}}
    <div class="alert alert-success">
	<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
	Bạn đã sửa đổi nhà sản xuất thành công
</div>
{{/if}}

<div class="row">
	<ul class="breadcrumb">
        <li>
            <a href="/">Home</a>
            <span class="divider">/</span>
        </li>
        <li>
            <a href="/producer">Producers</a>
            <span class="divider">/</span>
        </li>
        <li class="active">Producer Edit</li>
    </ul>

    {{#with producer}}
    <form action="" method="POST" class="form-horizontal" role="form">    
        <div class="control-group">
            <label class="control-label" for="inputId">ID <sup>*</sup></label>
            <div class="controls">
                <input id="inputId" name="ProducerId" type="text" value='{{ma_nsx}}' readonly="true">
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="inputName">Name <sup>*</sup></label>
            <div class="controls">
                <input id="inputName" name="ProducerName" type="string" value='{{ten_nsx}}'>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <button type="submit" class="btn btn-success">
                    Sửa
                </button>
            </div>
        </div>
    </form>

    {{/with }}
</div>
{{else}}
<p style="text-align:center;font-size: 50px;">BẠN KHÔNG CÓ QUYỀN TRUY CẬP TRANG NÀY</p>
<img style="display: block;
    margin-left: auto;
    margin-right: auto;
    width: 25%;" 
    src="https://vignette.wikia.nocookie.net/hive/images/9/9d/Spoiler.png/revision/latest?cb=20140924212820">
{{/if}}